<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.RegistrationPage">
    <NavigationPage.TitleView>
        <Label Text="Регистрация" FontSize="Large" TextColor="White"  Margin="75,0"></Label>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="10">
            <StackLayout Orientation="Horizontal" Spacing="30">
                <StackLayout Orientation="Vertical" Spacing="8">
                    <Label Text="Email" FontSize="Medium"/>
                    <Frame
                        Padding="-5" BackgroundColor="White"
                        BorderColor="Black">
                        <Entry x:Name="entEmail" Keyboard="Email" FontSize="24" WidthRequest="380"/>
                    </Frame>
                    <Label Text="Логин" FontSize="Medium"/>
                    <Frame
                        Padding="-5" BackgroundColor="White"
                        BorderColor="Black">
                        <Entry x:Name="entLogin" Keyboard="Email" FontSize="24" WidthRequest="380"/>
                    </Frame>
                    <Label Text="Пароль" FontSize="Medium"/>
                    <Frame
                        Padding="-5" BackgroundColor="White"
                        BorderColor="Black">
                        <Entry x:Name="entPassword" FontSize="24" IsPassword="True" WidthRequest="380"/>
                    </Frame>
                    <Label Text="Потверждения пароля" FontSize="Medium"/>
                    <Frame
                        Padding="-5" BackgroundColor="White"
                        BorderColor="Black">
                        <Entry x:Name="entPassword2" FontSize="24" IsPassword="True" WidthRequest="380"/>
                    </Frame>
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="Reg" Text="Зарегистрироваться" HorizontalOptions="FillAndExpand" Clicked="Button_Clicked_Auth"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>